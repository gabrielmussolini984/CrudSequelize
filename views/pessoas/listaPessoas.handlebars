<a type="button" class="btn btn-primary btn-lg btn-block " href="/pessoas/criarPessoaForm/">Nova Pessoa</a>
<table class="table table-bordered table-hover table-striped table-dark mt-3 ">
  <thead>
    <tr align="center">
      <th  scope="col">#</th>
      <th scope="col">Nome</th>
      <th scope="col">Cargo</th>
      <th scope="col">Ações</th>
    </tr>
  </thead>
  <tbody>
    {{#each resultado}}
    <tr align="center">
      <th scope="row">{{id}}</th>
      <td>{{nome}}</td>
      <td>{{cargo}}</td>
      <td>
      <div class="btn-group btn-group-sm" role="group" aria-label="Basic example">
        <a type="button" class="btn btn-secondary" href="/pessoas/editarPessoaForm/{{id}}" >Editar</a>
        <a type="button" class="btn btn-secondary" href="/pessoas/delete/{{id}}" onclick="return confirm('Deseja Realmente Excluir?')">Deletar</a>
      </div>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>

